{
  "manifest_version": 2,
  "name": "Polonize Strava",
  "description": "Display Strava website in Polish language.",
  "version": "1.0",
  "permissions": [
	"activeTab"
  ],
  "content_scripts": [
	{
	  "matches": ["*://*.strava.com/*"],
	  "css": [],
	  "js": ["content.js"],
	  "run_at": "document_start"
	}
  ]
}